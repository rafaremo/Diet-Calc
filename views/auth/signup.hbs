<div class="container">
  <div class="row">
    <div class="col s12">
      <form validate action="/signup" method="POST" class="row center-align">
        <h2>Ingresa tus Datos</h2>
        <div class="input-field col s12">
          <input placeholder="rafaelg" id="username" name="username" type="text" class="validate" value="{{body.username}}" required>
          <label for="username">Username</label>
        </div>
        <div class="input-field col s12">
          <input placeholder="exaple@example.com" id="email" name="email" type="email" class="validate" value="{{body.email}}" required>
          <label for="email">Email</label>
        </div>
        <div class="input-field col s12">
          <input id="pass" name="password" type="password" class="validate" required>
          <label for="pass">Password</label>
        </div>
        <div class="input-field col s12">
          <input id="pass2" name="password2" type="password" class="validate" required>
          <label for="pass2">Re-Type your Password</label>
        </div>
        {{#if message}}
          <p>{{message}}</p>
        {{/if}}
        <button class="btn waves-effect waves-light" type="submit" name="action">Enviar
          <i class="material-icons right">send</i>
        </button>
      </form>
    </div>
  </div>
</div>